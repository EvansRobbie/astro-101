---
const { title = 'Astro Basics' } = Astro.props;
import { Image } from 'astro:assets';
import logo from '../assets/astro.svg';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title} - Blog</title>
  </head>
  <body>
    <header
      class='z-10 sticky top-0 bg-white/20 backdrop-blur backdrop-filter h-20 flex items-center'
    >
      <nav class='flex items-center justify-between container mx-auto'>
        <a href='/'>
          <Image src={logo} alt='Astro logo' />
        </a>
        <ul class='flex items-center gap-4'>
          <li><a href='/'>Home</a></li>
          <li><a href='/about/'>About</a></li>
          <li><a href='/blog/'>Blog</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
